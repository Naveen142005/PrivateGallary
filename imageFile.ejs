<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Image</title>
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #ffe6ea;
            padding: 20px;
            flex-direction: column;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #d81b60;
            font-size: 2rem;
        }

        form {
            max-width: 400px;
            width: 100%;
            background-color: #fff;
            padding: 20px;
            border: 1px solid #d81b60;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        input[type="file"] {
            width: calc(100% - 22px);
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #d81b60;
            border-radius: 8px;
            font-size: 1rem;
            background-color: #fff;
            color: #333;
        }

        button[type="submit"] {
            display: block;
            width: 100%;
            padding: 12px;
            background-color: #d81b60;
            color: #fff;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1.2rem;
            transition: background-color 0.3s ease;
        }

        button[type="submit"]:hover {
            background-color: #c2185b;
        }

        .link-button {
            margin-top: 10px;
            text-align: center;
        }

        .link-button button {
            display: inline-block;
            padding: 8px 16px;
            background-color: #d81b60;
            color: #fff;
            text-decoration: none;
            border-radius: 8px;
            transition: background-color 0.3s ease;
            font-size: 1rem;
            cursor: pointer;
        }

        .link-button button:hover {
            background-color: #c2185b;
        }

        .message {
            margin-top: 20px;
            text-align: center;
            font-size: 1.2rem;
            color: #333;
        }

        .message.success {
            color: #4caf50;
        }

        .message.error {
            color: #f44336;
        }
    </style>
</head>
<body class="animate__animated animate__fadeInUp animate__fast">
    <h1 >Hey Naveen</h1>
    <form id="uploadForm" action="/upload_images" method="POST" enctype="multipart/form-data" >
        <input type="file" id="imageInput" name="image" style="cursor: pointer;">
        <button type="submit" id="uploadButton">Upload Image</button>
       
    </form>
    <p>&nbsp;</p>
    <form action="view_images" method="post" >
        <div class="link-button">
            <input type="text" name="hiddenValue" value="naveen__" style="display: none;">
            <button type="submit">View Images</button>
        </div>
    </form>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const uploadForm = document.getElementById('uploadForm');
            const imageInput = document.getElementById('imageInput');
            const uploadButton = document.getElementById('uploadButton');

            uploadForm.addEventListener('submit', function(event) {
                event.preventDefault();

                const formData = new FormData();
                formData.append('image', imageInput.files[0]);

                fetch('/upload_images', {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (response.ok) {
                        showSuccessMessage('uploaded! ðŸ’–');
                        uploadForm.reset(); 
                    } else {
                        showErrorMessage('Failed to upload image. ðŸ˜”');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showErrorMessage('Failed to upload image. Please try again. ðŸ˜”');
                });
            });

            function showSuccessMessage(message) {
                const messageElement = document.createElement('p');
                messageElement.classList.add('message', 'success');
                messageElement.textContent = message;
                uploadForm.insertAdjacentElement('beforebegin', messageElement);
                setTimeout(() => {
                    messageElement.remove();
                }, 3000);
            }

            function showErrorMessage(message) {
                const messageElement = document.createElement('p');
                messageElement.classList.add('message', 'error');
                messageElement.textContent = message;
                uploadForm.insertAdjacentElement('beforebegin', messageElement);
                setTimeout(() => {
                    messageElement.remove();
                }, 3000);
            }
        });
    </script>
</body>
</html>
